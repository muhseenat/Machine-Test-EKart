<%- include('../partials/header'); %>
    <div class="d-flex justify-content-between align-items-center"> 
      <h1> ALL PRODUCTS</h1>
      <div>
        <a href ="admin/add/product" class="btn btn-primary"> ADD PRODUCT</a>

      </div>
    </div>
    
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col"> Sl.No</th>
          <th scope="col"> Image </th>
          <th scope="col">Name </th>
          <th scope="col">Price </th>
          <th scope="col"> Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((item,index)=>{ %>
        <tr>
          <th scope="row"><%= ++index%></th>
          <td>
             <img src="/image/<%=item._id%>-1.jpg" style="width:50px" />
          </td>
          <td><%=item.name%> </td>
          <td><%=item.price%></td>
          <td>
            <a href="/admin/edit/product/<%=item._id%>" class="btn btn-primary text-white">Edit</a>
            <button href="/admin/delete/product/<%=item._id%>" class="btn btn-outline-danger">Delete</button>
          </td>


        </tr>
        <% }) %>
        
        
      </tbody>
    </table>
    <%- include('../partials/footer'); %>