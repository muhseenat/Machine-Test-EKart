<%- include('../partials/header'); %>

<div class="container">

    <% products.forEach((item,index)=>{ %>
    <div class="card" style="width: 18rem;">
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/image/<%=item.id%>-1.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/image/<%=item.id%>-2.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/image/<%=item.id%>-3.jpg" alt="Third slide">
              </div>
            </div>
          </div>
        <div class="card-body">
          <h3 class="card-title"><%=item.name%></h3>
          <div class="d-flex ">
           <div>
            <h5 class="card-text ">MRP: <%=Math.round(item.price+ item.price*5/100)%></h5>
            <div class="text-start border p-2 bg-success text-white">
                <span class="">Discount</span>
                <spn class=""><%=item.discount%>%</spn>
            </div>
            <div>
                <p class="mt-1">Shipping charge: <%=item.shippingCharge%></p>
            </div>
           </div>
                 
             <h3 class="text-right">Total â‚¹<%=Math.round(item.price+ item.price*5/100) - Math.round(item.price*item.discount/100) + item.shippingCharge%></h3>

             
          </div>
             
          <a href="#" class="btn btn-primary">Buy Now</a>
          <a href="#" class="btn btn-primary">Add to cart   </a>
        </div>
      </div>
      <%})%>
</div>

<%- include('../partials/footer'); %>

